#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

set -e

if [ -d "backend" ]; then
  echo "→ Backend: unit + e2e"
  (cd backend && npm test -- --coverage && npm run test:e2e)
fi

if [ -d "frontend" ]; then
  echo "→ Frontend: tests + build (se existirem)"
  (cd frontend && npm run test -- --coverage --if-present)
  (cd frontend && npm run build --if-present)
fi
